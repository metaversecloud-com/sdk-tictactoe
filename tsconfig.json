{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "strict": false,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
